
.container.login-page
  .col-md-8.col-md-offset-2
    .row.user-nav.row
      = link_to "sign in", new_user_session_path, class: "button sign_in_button"
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .col-md-12
          .user-name_image.row
            .user-image.col-md-2#name
              = f.file_field :avatar
            .field.col-md-10
              = f.text_field :username, autofocus: true, placeholder: "  username", class: "form-signin"
          .field
            = f.email_field :email, autofocus: true, placeholder: "  mail", class: "form-signin"
          .field
            = f.password_field :password, autocomplete: "off", placeholder: "  password" ,class: "form-signin"
          .field
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "  password confirmation" ,class: "form-signin"
          .actions
            = f.submit "sign in", class: "button-pink"
